
server {
    listen 80;
    listen [::]:80;
    root /opt/www;
    index index.php index.html index.htm;

    location /admin {
        return 301 https://$host$request_uri;
    }

    location /webmail {
        return 301 https://$host$request_uri;
    }

    location /.well-known {
        try_files $uri $uri.html @extensionless-php;
    }

    location /doc {
        try_files $uri $uri.html @extensionless-php;
    }
    location /autodiscover {
        try_files $uri $uri.html @extensionless-php;
    }
    location /mail {
        try_files $uri $uri.html @extensionless-php;
    }
    location @extensionless-php {
        rewrite ^(.*)$ $1.php last;
    }

    location ~ \.php$ {
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            fastcgi_pass unix:/var/run/php5-fpm.sock;
            fastcgi_index index.php;
            include fastcgi_params;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    ssl on;
    ssl_certificate /etc/ssl/server-combined.crt;
    ssl_certificate_key /etc/ssl/server.key;
    ssl_dhparam /etc/ssl/dh4096.pem;

    client_max_body_size 100m;

    root /opt/www;
    index index.php index.html index.htm;

    server_name localhost mail.* discover.* autoconfig.*;

    location /doc {
        try_files $uri $uri.html @extensionless-php;
    }
    location /autodiscover {
        try_files $uri $uri.html @extensionless-php;
    }
    location /mail {
        try_files $uri $uri.html @extensionless-php;
    }
    location @extensionless-php {
        rewrite ^(.*)$ $1.php last;
    }

    location /api {
        return 301 https://$host/admin$request_uri;
    }

    location /admin {
            alias /opt/mailserver-admin/web;
            try_files $uri @app;
    }

    location /Microsoft-Server-ActiveSync {
        include /etc/nginx/fastcgi_params;
        fastcgi_param SCRIPT_FILENAME /opt/z-push/index.php;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        # Z-Push Ping command will be alive for 470s, but be safe
        fastcgi_read_timeout 630;
    }

    location ^~ /webmail/data {
      deny all;
    }

    location @app {
        fastcgi_pass unix:/var/run/php5-fpm-admin.sock;
        include fastcgi_params;
#        fastcgi_param SCRIPT_FILENAME /opt/mailserver-admin/web/app_dev.php;
#        fastcgi_param SCRIPT_NAME     /admin/app_dev.php;
        fastcgi_param SCRIPT_FILENAME /opt/mailserver-admin/web/app.php;
        fastcgi_param SCRIPT_NAME     /admin/app.php;
        fastcgi_param HTTPS on;
    }

    location ~ \.php$ {
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            fastcgi_pass unix:/var/run/php5-fpm.sock;
            fastcgi_index index.php;
            include fastcgi_params;
    }
}
